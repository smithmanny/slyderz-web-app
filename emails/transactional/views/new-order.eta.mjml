{{ layout("../../shared/_layout.eta.mjml") }}

<mj-section background-color="#F6644A" padding-bottom="0px" padding-top="0">
  <mj-column vertical-align="top" width="100%">
    <mj-text align="left" color="#000" font-size="28px" font-weight="bold" font-family="Raleway open Sans Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="0px" padding-top="30px">Thanks you for your order</mj-text>
    <mj-text font-size="18px">Your order has been requested. We'll notify you when the chef has confirmed your order.</mj-text>
  </mj-column>
</mj-section>

<!-- <mj-include path="../../shared/order-summary.eta.mjml" /> -->
