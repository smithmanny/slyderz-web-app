  <mj-section>
    <mj-column>
      <mj-text font-weight="bold">Subtotal:{{= order.subtotal }}</mj-text>
      <mj-text font-weight="bold">Service Fee:{{= order.serviceFee }}</mj-text>
      <mj-text font-weight="bold">Total:{{= order.total }}</mj-text>
    </mj-column>
